<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="VehicleRecognitionApp.MainPage"
             Title="Vehicle Recognition">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Camera occupies all available space -->
            <RowDefinition Height="Auto" />
            <!-- Vehicle info occupies the necessary space -->
        </Grid.RowDefinitions>
        
        <!-- Hidden Camera View -->
        <cv:CameraView x:Name="cameraView"
                       VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand"
                       IsVisible="False"/>

        <!-- Pseudo Camera Feed Image -->

        <Image x:Name="pseudoCameraFeed"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"
               Aspect="AspectFill"
               BackgroundColor="Black">
            
            <Image.Source>
                <UriImageSource CachingEnabled="False"/>
            </Image.Source>
            
        </Image>


    </Grid>
</ContentPage>
